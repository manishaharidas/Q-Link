<html> 
<button class="btn btn-info" type="button"><%= link_to "LIST", firstpage_events_path, :style=>"text-decoration: none;"%></button>
<button class="btn btn-info" type="button"><%= link_to "+CREATE EVENT", events_path, :style=>"text-decoration: none;" %></button>
<button class="btn btn-info" type="button"><i class="icon-calendar"></i>&nbsp<%= link_to "MY CALENDAR", showcalender_events_path, :style=>"text-decoration: none;" %></button>
</br></br> 
  <div id='outer'>  
      <%= form_for :event, url: { action: 'save_event', controller: "events", method: :post} do |f| %>
      <p>
         <%=f.label :title %>
         <%=f.text_field :title %>
      </p>
	  <p>
         <%=f.label :description %>
         <%=f.text_area :description, :rows => 4, :cols => 30 %>
	 </p>
     <p>
  		<%=f.label :starttime, 'Start Date' %>
  		<%=f.datetime_select :start, {},{:class => 'option-large'}%>
	</p>
	<p>
       <%=f.label :endtime, 'End Date' %>
       <%=f.datetime_select :endtime, {},{:class => 'option-large'}%>
	</p>
	<p>
      <%= f.submit(type: 'submit', class: "btn btn-info", :value => "SUBMIT")  %>
      <button class="btn btn-info" type="button"><%= link_to "CANCEL", firstpage_events_path %></button>
	</p>
  <% end %>
 </div>  
</html>
